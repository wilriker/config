# Colors
set -g status-bg "colour234"
set -g message-command-style bg="colour254"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-style fg="colour110"
set -g message-style bg="colour237"
set -g message-style fg="colour254"
set -g status-right-length "100"
set -g message-command-style bg="colour237"
set -g pane-border-style fg="colour237"

# Window-area colors
setw -g window-status-style bg="colour234"
setw -g window-status-style fg="colour254"
setw -g window-status-activity-style bg="colour234"
setw -g window-status-activity-style fg="colour110"
setw -g window-status-separator ""

# Status bar overall format
set -g status-justify centre
set -g status-interval 5
set -g status-left "#[fg=colour16,bg=colour110,bold] #h #[fg=colour110,bg=colour234,nobold]"
set -ga status-right "#[fg=colour237]#[fg=colour254,bg=colour237] %Y-%m-%d  %H:%M "

# Status bar Window-area format
setw -g window-status-format "#[fg=colour254,bg=colour234] #I  #W#{?window_zoomed_flag, (Z),}"
setw -g window-status-current-format "#[fg=colour234,bg=colour237]#[fg=colour254,bg=colour237] #I  #W#{?window_zoomed_flag, (Z),} #[fg=colour237,bg=colour234]"

# vim: ft=tmux
